{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "starter",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "starter"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "obstacle",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "obstacle"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "unittest",
            "options": { "cwd": "${workspaceFolder}" },
            "command": "mingw32-make.exe",
            "args": [ "-f", ".vscode/makefile", "test" ],
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "label": "testObstacle",
            "options": { "cwd": "${workspaceFolder}" },
            "command": "mingw32-make.exe",
            "args": [ "-f", ".vscode/makefile", "testObstacle" ],
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "label": "build",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "build"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "rebuild"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "clean"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }

    ]
}